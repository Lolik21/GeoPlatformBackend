datasource db {
    url      = "mysql://root@localhost:3306/geo-platform"
    provider = "mysql"
}

generator client {
    provider = "prisma-client-js"
}

enum UserStatus {
    active
    blocked
}

model Claim {
    id        Int     @id @default(autoincrement())
    action    String
    subject   String
    condition String?
    roles     Role[]
}

model Role {
    id     Int     @id @default(autoincrement())
    name   String  @unique
    claims Claim[]
    users  User[]
}

model User {
    id       Int        @id @default(autoincrement())
    username String     @unique
    email    String     @unique
    status   UserStatus @default(active)
    password String
    role     Role?      @relation(fields: [roleId], references: [id])
    roleId   Int?
    worker   Worker?    @relation(fields: [workerId], references: [id])
    workerId Int?       @unique
}

model Worker {
    id          Int       @id @default(autoincrement())
    firstName   String
    middleName  String
    lastName    String
    birthday    DateTime
    mobilePhone String?
    homePhone   String?
    hiredDate   DateTime
    firedDate   DateTime?
    workNorm    Float
    boostFactor Float     @default(1)
    updatedAt   DateTime  @updatedAt

    position         WorkerPosition @relation(fields: [workerPositionId], references: [id])
    category         WorkerCategory @relation(fields: [workerCategoryId], references: [id])
    workerPositionId Int
    workerCategoryId Int

    invitation          Invite?
    user                User?
    responsibleProjects Project[]
}

model WorkerCategory {
    id     Int      @id @default(autoincrement())
    name   String   @unique
    worker Worker[]
}

model WorkerPosition {
    id         Int      @id @default(autoincrement())
    name       String   @unique
    baseSalary Decimal
    worker     Worker[]
}

model Invite {
    id       String @id @default(uuid())
    worker   Worker @relation(fields: [workerId], references: [id])
    workerId Int    @unique
}

model WorkClient {
    id               Int       @id @default(autoincrement())
    name             String    @unique
    address          String
    contactPhone     String
    isActive         Boolean   @default(true)
    clientProjects   Project[] @relation("client")
    executorProjects Project[] @relation("executor")
}

model Project {
    id                  Int        @id @default(autoincrement())
    name                String
    summary             String
    startDate           DateTime
    endDate             DateTime
    activities          Activity[]
    client              WorkClient @relation("client", fields: [clientId], references: [id])
    clientId            Int
    executor            WorkClient @relation("executor", fields: [executorId], references: [id])
    executorId          Int
    responsible         Worker     @relation(fields: [responsibleWorkerId], references: [id])
    responsibleWorkerId Int
}

model Activity {
    id          Int    @id @default(autoincrement())
    summary     String
    description String

    project   Project? @relation(fields: [projectId], references: [id])
    projectId Int?
}

model TimeReport {
    id      DateTime @id @default(now())
    comment String?
}

model MonthlyTimeReview {
    id    Int    @id @default(autoincrement())
    field String
}
