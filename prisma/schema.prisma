datasource db {
    url      = "mysql://root@localhost:3306/geo-platform"
    provider = "mysql"
}

generator client {
    provider = "prisma-client-js"
}

enum UserStatus {
    active
    blocked
}

model Claim {
    id        Int    @id @default(autoincrement())
    action    String
    subject   String
    condition String
    roles     Role[]
}

model Role {
    id     Int     @id @default(autoincrement())
    name   String  @unique
    claims Claim[]
    users  User[]
}

model User {
    id       Int        @id @default(autoincrement())
    username String     @unique
    email    String     @unique
    status   UserStatus @default(active)
    password String
    role     Role?      @relation(fields: [roleId], references: [id])
    roleId   Int?
    worker   Worker?    @relation(fields: [workerId], references: [id])
    workerId Int?       @unique
}

model Worker {
    id         Int     @id @default(autoincrement())
    firstName  String
    middleName String
    lastName   String
    invitation Invite?
    user       User?
}

model Invite {
    id       String @id @default(uuid())
    worker   Worker @relation(fields: [workerId], references: [id])
    workerId Int    @unique
}

model Project {
    id      Int    @id @default(autoincrement())
    summary String
}

model Activity {
    id          Int    @id @default(autoincrement())
    summary     String
    description String
}

model TimeReport {
    id      DateTime @id @default(now())
    comment String?
}

model MonthlyTimeReview {
    id    Int    @id @default(autoincrement())
    field String
}
